<h3>Change Password</h3>

<% if error %>
<div class="error"><%= error %></div>
<% end %>

<form method="post" action="/user/change_password">

	<div>
		<label for="password">Current Password</label>
		<input type="password" name="password" value="<%= password %>">
	</div>
	
	<div>
		<label for="new_password">New Password</label>
		<input type="password" name="new_password" value="<%= new_password %>">
	</div>
	
	<div>
		<label for="new_password2">Repeat New Password</label>
		<input type="password" name="new_password2" value="<%= new_password2 %>"> (Enter Your Password Again)
	</div>
	
	<div>
	<div class="form_offset"></div>
		<input type="submit" name="action" value="Change Password">
	</div>
	
</form>
